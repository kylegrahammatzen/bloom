{
  "name": "@bloom/adapters",
  "version": "1.0.0",
  "type": "module",
  "description": "Framework adapters for Bloom authentication",
  "license": "AGPL-3.0",
  "author": "Kyle Graham Matzen <kgrahammatzen@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kylegrahammatzen/bloom.git",
    "directory": "packages/adapters"
  },
  "homepage": "https://github.com/kylegrahammatzen/bloom#readme",
  "bugs": {
    "url": "https://github.com/kylegrahammatzen/bloom/issues"
  },
  "keywords": [
    "auth",
    "express",
    "nextjs",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bloom/core": "workspace:*"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "express": "^4.18.2",
    "next": "^15.5.4",
    "tsc-alias": "^1.8.16",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.0.0",
    "helmet": "^7.1.0",
    "mongoose": "^7.6.3",
    "next": "^15.0.0"
  },
  "peerDependenciesMeta": {
    "cookie-parser": {
      "optional": true
    },
    "cors": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "helmet": {
      "optional": true
    },
    "mongoose": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "exports": {
    "./express": {
      "types": "./dist/express/index.d.ts",
      "default": "./dist/express/index.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs/index.d.ts",
      "default": "./dist/nextjs/index.js"
    },
    "./nextjs/middleware": {
      "types": "./dist/nextjs/middleware.d.ts",
      "default": "./dist/nextjs/middleware.js"
    },
    "./nextjs/server": {
      "types": "./dist/nextjs/server.d.ts",
      "default": "./dist/nextjs/server.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*/index.d.ts"
      ]
    }
  }
}
