{
  "name": "@bloom/adapters",
  "version": "1.0.0",
  "description": "Framework adapters for Bloom authentication",
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@bloom/core": "workspace:*"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@vitest/ui": "^3.2.4",
    "express": "^4.18.2",
    "next": "^15.5.4",
    "tsc-alias": "^1.8.16",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.0.0",
    "helmet": "^7.1.0",
    "mongoose": "^7.6.3",
    "next": "^15.0.0"
  },
  "peerDependenciesMeta": {
    "cookie-parser": {
      "optional": true
    },
    "cors": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "helmet": {
      "optional": true
    },
    "mongoose": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "exports": {
    "./*": {
      "types": "./dist/*/index.d.ts",
      "default": "./dist/*/index.js"
    },
    "./nextjs/middleware": {
      "types": "./dist/nextjs/middleware.d.ts",
      "default": "./dist/nextjs/middleware.js"
    },
    "./nextjs/server": {
      "types": "./dist/nextjs/server.d.ts",
      "default": "./dist/nextjs/server.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*/index.d.ts"
      ]
    }
  }
}
