    "next": "^15.5.4",
    "tsc-alias": "^1.8.16",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "connect-mongo": "^5.1.0",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.0.0",
    "express-session": "^1.17.3",
