{
  "name": "@bloom/core",
  "version": "1.0.0",
  "description": "Core authentication library for Bloom - framework-agnostic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@zodyac/zod-mongoose": "^4.2.0",
    "argon2": "^0.31.2",
    "mongoose": "^7.6.3",
    "pino": "^10.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@vitest/ui": "^2.1.9",
    "next": "^15.5.4",
    "pino-pretty": "^13.1.1",
    "tsc-alias": "^1.8.16",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.0.0",
    "helmet": "^7.1.0",
    "next": "^15.0.0"
  },
  "peerDependenciesMeta": {
    "cookie-parser": {
      "optional": true
    },
    "cors": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "helmet": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./schemas/auth": {
      "types": "./dist/schemas/auth.d.ts",
      "default": "./dist/schemas/auth.js"
    },
    "./schemas/auth/client": {
      "types": "./dist/schemas/auth.client.d.ts",
      "default": "./dist/schemas/auth.client.js"
    },
    "./schemas/config": {
      "types": "./dist/schemas/config.d.ts",
      "default": "./dist/schemas/config.js"
    },
    "./schemas/cookies": {
      "types": "./dist/schemas/cookies.d.ts",
      "default": "./dist/schemas/cookies.js"
    },
    "./schemas/api": {
      "types": "./dist/schemas/api.d.ts",
      "default": "./dist/schemas/api.js"
    },
    "./schemas/errors": {
      "types": "./dist/schemas/errors.d.ts",
      "default": "./dist/schemas/errors.js"
    },
    "./schemas/handler": {
      "types": "./dist/schemas/handler.d.ts",
      "default": "./dist/schemas/handler.js"
    },
    "./schemas/plugin": {
      "types": "./dist/schemas/plugin.d.ts",
      "default": "./dist/schemas/plugin.js"
    },
    "./schemas/server": {
      "types": "./dist/schemas/server.d.ts",
      "default": "./dist/schemas/server.js"
    },
    "./schemas/session": {
      "types": "./dist/schemas/session.d.ts",
      "default": "./dist/schemas/session.js"
    },
    "./schemas/validation": {
      "types": "./dist/schemas/validation.d.ts",
      "default": "./dist/schemas/validation.js"
    },
    "./server/express": {
      "types": "./dist/server/express/index.d.ts",
      "default": "./dist/server/express/index.js"
    },
    "./server/nextjs": {
      "types": "./dist/server/nextjs/index.d.ts",
      "default": "./dist/server/nextjs/index.js"
    }
  }
