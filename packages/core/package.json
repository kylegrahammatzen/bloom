      "optional": true
    },
    "cors": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "express-session": {
      "optional": true
    },
    "helmet": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "redis": {
      "optional": true
    }
