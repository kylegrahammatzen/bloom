    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./server/express": {
      "types": "./dist/server/express/index.d.ts",
      "default": "./dist/server/express/index.js"
    },
    "./server/nextjs": {
      "types": "./dist/server/nextjs/index.d.ts",
      "default": "./dist/server/nextjs/index.js"
    }
